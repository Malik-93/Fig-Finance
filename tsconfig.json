{
    "compilerOptions": {
        "declarationMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "rootDir": ".",
        "outDir": "build",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "module": "commonjs",
        "lib": ["es2019"],
        "resolveJsonModule": true,
        "target": "es6"
    },
    // "exclude": [
    //     "./tests/",
    //     "./node_modules/",
    //     "./dist/"
    //   ],
    "include": ["server/**/*.ts"],
    "noImplicitAny": false,
    "target": "es6"
}
