{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "build/server/index.js",
    "scripts": {
        "dev": "concurrently \"yarn run server\" \"yarn run client\"",
        "start": "tsc && node build/server/index.js",
        "build": "npm run lint && tsc",
        "server": "yarn && tsc && nodemon server/index.ts",
        "client": "cd client && yarn && yarn start",
        "compile": "tsc",
        "prettier": "prettier --config ./.prettierrc --write \"**/*.ts\"",
        "lint": "npm run prettier --write --check --config ./.prettierrc \"**/*.ts\" && eslint . --ext .ts",
        "test": "tsc && mocha ./server/tests/*.spec.js",
        "test:watch": "mocha --watch ./server/tests/*.spec.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^15.0.0",
        "express": "^4.17.2",
        "mongoose": "^5.11.12",
        "winston": "^3.5.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/node": "^17.0.14",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "chai": "^4.3.6",
        "concurrently": "^7.2.2",
        "eslint": "^8.8.0",
        "mocha": "^10.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rewire": "^6.0.0",
        "sinon": "^14.0.0",
        "sinon-chai": "^3.7.0",
        "supertest": "^6.2.3",
        "ts-node": "^10.7.0",
        "typescript": "^4.5.5"
    }
}
